{
  "manifest_version": 3,
  "name": "Browser Sprite",
  "version": "1.0.0",
  "description": "A virtual pet slime that walks across your browser window and reacts to your cursor",
  "icons": {
    "128": "images/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/sprite.css"],
      "js": ["js/sprite.js"]
    }
  ],
  "permissions": [
    "storage"
  ]
}